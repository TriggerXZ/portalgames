---
interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props
---

<section class="flex pt-3 flex-col justify-center items-center h-50">
    <div class="flex flex-col justify-center items-center w-[80%]">
        <h2 class="text-4xl md:text-7xl text-[#e9c7a5] pt-3 font-bold justify-center items-center text-center">
            {title}
        </h2>
        <p class="text-xl md:text-2xl text-white py-3 font-bold justify-center items-center text-center">
            {description}
        </p>
    </div>
</section>