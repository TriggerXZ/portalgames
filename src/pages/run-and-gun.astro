---
import Layout from '../layouts/Layout.astro';
import JuegosItem from '../components/JuegosItem.astro';
import HeroJuegos from '../components/HeroJuegos.astro';

const articles = [
    {
        title: "Sunset Riders",
        description: "",
        img: "imgs/sunset.avif",
        alt: "Sunset Riders",
    },
    {
        title: "Metal Slug X",
        description: "",
        img: "imgs/metalx.avif",
        alt: "Metal Slug X",
    },
    {
        title: "Gunstar Heroes",
        description: "",
        img: "imgs/gunstar.avif",
        alt: "Gunstar Heroes",
    },
];
---

<Layout title='Run and Gun' description='Run and Gun'>
    <main class="pt-12">
        <HeroJuegos title='Run and Gun' description='¡Embárcate en una frenética carrera de balas y acción!'/>
        <section class="flex flex-col items-center justify-center">
            <article class="grid grid-cols-1 md:grid-cols-2 gap-3">
                {
                    articles.map((articles) => {
                        return <JuegosItem {...articles} />
                    })
                }
            </article>
        </section>
    </main>
</Layout>